	<div class="posts">
		<% @posts.each do |post| %>
			<div class="post">
				<h3><%= post.title %></h3>
				<p><%= post.description %></p>
				<%= link_to "Research", post.researchlink %>
				<p>Research author: <%= post.researchauth %></p>
				<p>Research date: <%= post.researchdate %></p>
				<p>Submitter: <%= post.user.name %></p>
				<p><%= link_to "Read more", post %></p>
				<% if current_user != nil && current_user.admin? or current_user == post.user %>
					<%= link_to 'Edit', edit_post_path(post) %>
				<% end %>
			</div>
		<% end %>
	</div>