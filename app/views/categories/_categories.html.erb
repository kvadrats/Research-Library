
<div class="panel-group" id="subjectmenu">
  <% @allcategories.each do |category| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#<%= category.name %>"><%= category.name %></a>
      </h4>
    </div>
    <div id="<%= category.name %>" class="panel-collapse collapse">
      <ul class="list-group">
        <% @allsubcategories.each do |subcategory| %>
        <% next if category.id != subcategory.category_id %>
          <li class="list-group-item"><%=link_to subcategory.name, subcategory %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
</div>