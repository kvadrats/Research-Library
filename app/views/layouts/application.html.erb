<!DOCTYPE html>
<html>
<head>
  <title>Research</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="menu">
    <ul>
      <li><a href="/"><%= image_tag("logo.png") %>></a></li>
      <li><a href="/">Front Page</a></li>
      <li><a href="/">Journal Posts</a></li>
      <li><a href="/">User Papers</a></li>
      <li><a href="/">Book Recommendations</a></li>
      <li><a href="/">Skill learning</a></li>
      <li><a href="/">Requests</a></li>
    </ul>
  </div>
	<div class="container">
  		<% flash.each do |key, value| %>
    		<div class="alert alert-<%= key %>">
      			<%= value %>
    		</div>
  		<% end %>
	</div>

	<%= yield :top_content %>

	<div class="container">

  		<%= yield %> 

  </div>
<div id="userbox">
  <ul class="nav navbar-nav">
    <li><%= link_to 'Home', root_path %></li>
    <% if user_signed_in? %>
      <li><%=link_to 'Secret', secret_path %></li>
    <% end %>
  </ul>
  <ul class="nav navbar-nav pull-right">
    <% if user_signed_in? %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <% if current_user.admin? %>
                <li><%= link_to 'Category management', categories_path %></li>
              <% end %>
              <li><%= link_to 'Page management', managements_path %>
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Submit a post', new_post_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
  </ul>
</div>
</body>
</html>
