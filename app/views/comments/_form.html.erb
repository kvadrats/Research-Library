<%= form_for @comment do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :parent_id, :value => params[:parent_id] %>
<% if params[:id] != nil %>
<%= f.hidden_field :post_id, :value => params[:id] %>
<% else %>
<%= f.hidden_field :post_id, value: @comment.parent.post_id %>
<% end %>
<%= f.label :comment, "New Comment" %><br>
<%= f.text_field :comment, rows: 8 %>

<%= f.submit %>
<% end %>