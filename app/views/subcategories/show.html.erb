<p id="notice"><%= notice %></p>

<% if current_user != nil %>
	<div class="subcategory-options">
		<% if current_user.subcategories.find_by(id: @subcategory) %>
			<%= button_to( "Unsubscribe", unsubscribe_subcategory_path(@subcategory))%>
		<% else %>
			<%= button_to( "Subscribe", subscribe_subcategory_path(@subcategory))%>
		<% end %>
	</div>
<% end %>



<div class="frontpage">
	<ul class="tabmenu">
		<li><a class="active" href="/">New</a></li>
		<li><a href="/">Something</a></li>
		<li><a href="/">Top</a></li>
		<li><a href="/">Discussed</a></li>
	</ul>

	<%= render 'categories/categories' %>
	
	<div class="posts">
		<% @posts.each do |post| %>
			<div class="post">
				<h3><%= post.title %></h3>
				<p><%= post.description %></p>
				<%= link_to "Research", post.researchlink %>
				<%= link_to "Article", post.articlelink %>
				<p>Article author: <%= post.articleauth %></p>
				<p>Research author: <%= post.researchauth %></p>
				<p>Research date: <%= post.researchdate %></p>
				<p>Submitter: <%= post.user.name %></p>
				<p><%= link_to "Read more", post %></p>
			</div>
		<% end %>
	</div>
</div>